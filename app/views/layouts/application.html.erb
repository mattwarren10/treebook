<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<nav class="navbar navbar-default">
  		<div class="container-fluid">
  		  <div class="navbar-header">
				<a href="#" class="brand">Treebook</a>
				<ul class="nav nav-pills">
					<li role="presentation"><%= link_to "All Statuses", statuses_path %></li>
					<% if user_signed_in? %>
					<li><%= link_to "Edit user", edit_user_registration_path %></li>
					<li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
					<% else %>
						<li><%= link_to "Register", new_user_registration_path %></li>
						<li><%= link_to "Log in", new_user_session_path %></li>
					<% end %>
				</ul
			</div>
		</div>
	</nav>
	<div class="container">
		<% flash.each do |type, message| %>
			<div class="alert <%= flash_class type %>" role="alert">
				<button class="close" data-dismiss="auto"></button>
				<%= message %>
			</div>
		<% end %>
	
		<%= yield %>
	</div>

</body>
</html>
